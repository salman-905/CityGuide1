<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dashboard_background">

    <ImageView
        android:id="@+id/nav_menu_header_illustration"
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerInside"
        android:src="@drawable/illustration_navigation_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/nav_menu_header_app_logo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerInside"
        android:src="@drawable/img_app_logo"
        app:layout_constraintBottom_toTopOf="@+id/nav_menu_header_app_name"
        app:layout_constraintEnd_toEndOf="@+id/nav_menu_header_app_name"
        app:layout_constraintStart_toStartOf="@+id/nav_menu_header_app_name" />

    <TextView
        android:id="@+id/nav_menu_header_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/app_name"
        android:textAlignment="textStart"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="@+id/nav_menu_header_illustration"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/nav_menu_header_app_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/poppins"
        android:text="@string/app_slogan"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="normal"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/nav_menu_header_app_name"
        app:layout_constraintTop_toBottomOf="@+id/nav_menu_header_app_name" />

</androidx.constraintlayout.widget.ConstraintLayout>